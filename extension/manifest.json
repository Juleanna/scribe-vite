{
  "manifest_version": 3,
  "name": "Scribe Click Capture",
  "version": "0.1.0",
  "description": "Скриншоты по клику на странице и отправка в Scribe",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "Toggle capture mode" },
  "commands": {
    "toggle-capture": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle click capture mode"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
